.container_check-pending 
  min-width 910px
.input-numbers
  color #606266
  font-size 12px
  position relative
  margin-left -35px
  // z-index 0
.words-number-tip
  color #F56C6C
  font-size 12px
  margin-left 10px
.has-selected
  font-size 12px
  color #606266
  margin-left 10px
.input-box
  
  width 200px
  margin-right 5px
.blue-title
  color  #409EFF
  cursor pointer
  width  100%
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

// 图片上传部分
.avatar-uploader >>> .el-upload 
  border: 1px dashed #d9d9d9
  border-radius: 6px
  cursor: pointer
  position: relative
  overflow: hidden
  &:hover 
    border-color: #409EFF

.avatar-uploader-icon 
  font-size: 28px
  color: #8c939d
  width: 178px
  height: 178px
  line-height: 178px
  text-align: center


.avatar 
  max-width 358px
  max-height 178px
  display block

.user-avator img 
  width 35px
  height 35px
  border-radius 50%

.upload-box 
  width 178px
  height 178px
  border-radius 6px
  border 1px dashed #d9d9d9
  &:hover 
    border-color #409EFF
    cursor pointer
  img 
    width 100%
    height 100%
    object-fit cover
    border-radius 6px

.file-box 
  width 0
  height 0
  opacity 0
  display none
.bg-file-box
  width 0
  height 0
  opacity 0
  display none